<div class="container mx-auto mt-8">
  <h1 class="text-3xl font-bold mb-4">Hacker News Top 30 Entries</h1>
  <div class="mb-4">
    <%= link_to 'More than 5 words', root_path(filter: 'more_than_five_words'), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded", data: { turbo_frame: "entries_table" } %>
    <%= link_to '5 or less words', root_path(filter: 'five_or_less_words'), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded ml-2", data: { turbo_frame: "entries_table" } %>
    <%= link_to 'Show all', root_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded ml-2", data: { turbo_frame: "entries_table" } %>
  </div>
  <%= turbo_frame_tag "entries_table" do %>
    <%= render "entries/table", entries: @entries %>
  <% end %>
</div>
