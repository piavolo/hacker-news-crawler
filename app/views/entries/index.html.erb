<div class="container mx-auto mt-8">
  <h1 class="text-3xl font-bold mb-4">Hacker News Top 30 Entries</h1>
  <div class="mb-4">
    <%= link_to 'More than 5 words', root_path(filter: 'more_than_five_words'), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    <%= link_to '5 or less words', root_path(filter: 'five_or_less_words'), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded ml-2" %>
    <%= link_to 'Show all', root_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded ml-2" %>
  </div>
  <table class="min-w-full bg-white">
    <thead class="bg-gray-800 text-white">
      <tr>
        <th class="w-1/12 py-2">#</th>
        <th class="w-6/12 py-2">Title</th>
        <th class="w-2/12 py-2">Points</th>
        <th class="w-3/12 py-2">Comments</th>
      </tr>
    </thead>
    <tbody>
      <% @entries.each do |entry| %>
        <tr class="border-b">
          <td class="py-2 text-center"><%= entry.number %></td>
          <td class="py-2"><%= entry.title %></td>
          <td class="py-2 text-center"><%= entry.points %></td>
          <td class="py-2 text-center"><%= entry.comments %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
